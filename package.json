{
  "devDependencies": {
    "@types/jest": "29.2.4",
    "jest": "29.3.1",
    "ts-jest": "29.0.3",
    "typescript": "4.9.4"
  },
  "scripts": {
    "test": "jest"
  },
  "jest": {
    "coverageThreshold": {
      "global": {
        "branches": 56,
        "lines": 77
      }
    },
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "testMatch": [
      "**/*.spec.(ts|tsx|js)"
    ],
    "testTimeout": 15000,
    "transform": {
      ".(ts|tsx)": "ts-jest"
    }
  }
}
